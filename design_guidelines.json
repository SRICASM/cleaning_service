          "name": "Zesty Lime",
          "hex": "#84cc16",
          "tailwind": "bg-lime-500 text-white hover:bg-lime-600",
          "description": "Primary CTA color. High energy, freshness."
        },
        "muted": {
          "name": "Warm Grey",
          "hex": "#e7e5e4",
          "tailwind": "bg-stone-200 text-stone-600",
          "description": "For borders, dividers, and secondary backgrounds."
        }
      },
      "css_vars": {
        "background": "60 9.1% 97.8%",
        "foreground": "24 9.8% 10%",
        "card": "0 0% 100%",
        "card-foreground": "24 9.8% 10%",
        "popover": "0 0% 100%",
        "popover-foreground": "24 9.8% 10%",
        "primary": "142.1 76.2% 36.3%",
        "primary-foreground": "355.7 100% 97.3%",

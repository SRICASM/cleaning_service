      "scale": {
        "h1": "text-5xl md:text-7xl font-bold tracking-tight",
        "h2": "text-4xl md:text-5xl font-semibold tracking-tight",
        "h3": "text-2xl md:text-3xl font-medium",
        "body": "text-base md:text-lg leading-relaxed",
        "caption": "text-sm font-medium tracking-wide uppercase text-muted-foreground"
      }
    },
    "colors": {
      "palette": {
        "primary": {
          "name": "Deep Forest",
          "hex": "#14532d",
          "tailwind": "bg-green-900 text-white",
          "description": "Used for primary headings, strong brand presence, and trust."
        },
        "secondary": {
          "name": "Stone White",
          "hex": "#fafaf9",
          "tailwind": "bg-stone-50 text-stone-900",
          "description": "Main background color. Warm and organic, not sterile."

        "secondary-foreground": "24 9.8% 10%",
        "muted": "60 4.8% 95.9%",
        "muted-foreground": "25 5.3% 44.7%",
        "accent": "60 4.8% 95.9%",
        "accent-foreground": "24 9.8% 10%",
        "destructive": "0 84.2% 60.2%",
        "destructive-foreground": "60 9.1% 97.8%",
        "border": "20 5.9% 90%",
        "input": "20 5.9% 90%",
        "ring": "142.1 76.2% 36.3%",
        "radius": "0.75rem"
      }
    },
    "spacing": {
      "container_padding": "px-6 md:px-12 lg:px-24",
      "section_gap": "py-20 md:py-32",
      "element_gap": "gap-6 md:gap-12"
    },
    "visual_enhancers": {
      "glassmorphism": "bg-white/70 backdrop-blur-xl border border-white/20 shadow-sm",
      "shadows": {
        "soft": "shadow-[0_8px_30px_rgb(0,0,0,0.04)]",
        "hard": "shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]"
      },
      "borders": "border border-stone-200 rounded-xl",
      "gradients": "bg-gradient-to-br from-stone-50 to-stone-100"
    }
  },
  "layout_strategies": {
    "marketing": {
      "grid_type": "Mode A: Tetris Grid",
      "rules": [
        "Use asymmetric grid layouts (grid-cols-12).",
        "Never center text by default; use left alignment for readability.",
        "Use massive whitespace (py-32) between sections."
      ]
    },
    "dashboard": {
      "grid_type": "Mode B: High Density",
      "rules": [
        "Use dense grids (gap-4).",
        "Cards must stretch to fill height (h-full).",
        "Use sidebar navigation for admin/user dashboards."
      ]
    },
    "booking_flow": {
      "type": "Focused Wizard",
      "rules": [
        "Remove main navigation to prevent exit.",
        "Show clear progress bar.",
        "Use large, clickable cards for selection (Radio Group style)."
      ]
    }
  },
  "components": {
    "buttons": {
      "primary": "bg-primary text-primary-foreground hover:bg-primary/90 h-12 px-8 rounded-full font-medium transition-all hover:scale-105 active:scale-95",
      "secondary": "bg-secondary text-secondary-foreground hover:bg-secondary/80 h-12 px-8 rounded-full font-medium",
      "outline": "border-2 border-primary text-primary hover:bg-primary hover:text-white h-12 px-8 rounded-full font-medium"
    },
    "cards": {
      "service": "group relative overflow-hidden rounded-3xl bg-white p-8 shadow-soft hover:shadow-lg transition-all border border-stone-100",
      "feature": "bg-stone-50 p-8 rounded-2xl border border-stone-100 hover:bg-white transition-colors"
    },
    "inputs": {
      "style": "h-12 rounded-lg border-stone-200 bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all"
    }
  },

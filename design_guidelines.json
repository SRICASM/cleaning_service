  "motion": {
    "library": "framer-motion",
    "variants": {
      "fadeInUp": {
        "initial": { "opacity": 0, "y": 20 },
        "animate": { "opacity": 1, "y": 0 },
        "transition": { "duration": 0.5, "ease": "easeOut" }
      },
      "staggerContainer": {
        "animate": { "transition": { "staggerChildren": 0.1 } }
      }
    }
  },
  "universal_guidelines": [
    "Do not use generic 'medical blue' colors. Stick to the Forest/Lime/Stone palette.",
    "Ensure all interactive elements have hover states (transform: scale(1.02) or color change).",
    "Use 'sonner' for all toast notifications.",
    "Booking flow must be broken into steps: Service -> Details -> Date -> Payment.",
    "Admin dashboard must use a sidebar layout with a dense data grid.",
    "All images must use the 'object-cover' class to prevent distortion.",
    "Add 'data-testid' to all buttons, inputs, and links."
  ]
}